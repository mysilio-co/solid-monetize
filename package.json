{
  "name": "solid-monetize",
  "version": "0.1.0",
  "author": "Travis Vachon <travis@understory.coop>",
  "description": "get your payment pointer from your Solid Pod",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/understory-garden/solid-monetize/issues"
  },
  "main": "dist/index.js",
  "module": "dist/solid-monetize.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "build:docs": "typedoc  --tsconfig tsconfig.json",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/solid-monetize.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/solid-monetize.esm.js",
      "limit": "10 KB"
    }
  ],
  "peerDependencies": {
    "react": ">=16"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@size-limit/preset-small-lib": "^4.8.0",
    "babel-loader": "^8.2.1",
    "size-limit": "^4.8.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typedoc": "^0.20.36",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@inrupt/solid-client": "^1.1.0"
  }
}
